# coding: "utf-8"
Root:

<Root>:
    canvas.before:
        Color:
            rgb: 0,0,0
        Rectangle:
            pos: self.pos
            size: self.size

<Title@BoxLayout>:
    orientation: 'vertical'
    Label:
        text:'3D Yonmoku'
        font_size: 120
        color: 1,1,1,1
    Switch:
        id: "first-move-check"
        text:'First move'
    Button:
        text: "play"
        on_press:
            app.root.gotoGame()

<Board>:
    Layer:
    Layer:
    Layer:
    Layer:

<Layer>:
    padding:30,150,30,150

<Board_button>:
    size:20,20
    

<Graph>:
    Button:
        id:'A'
        text:str(app.root.state)

<TestButton@Button>:
    on_press:app.root.gotoTitle()

